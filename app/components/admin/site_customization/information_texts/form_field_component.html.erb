<% globalize(locale) do %>
  <%= text_area_tag "contents[content_#{i18n_content.key}]values[value_#{locale}]",
                    text,
                    rows: 5,
                    class: "js-globalize-attribute",
                    style: site_customization_display_translation_style,
                    data: { locale: locale } %>
<% end %>
