<div class="budget-group-switcher">
  <% if other_groups.one? %>
    <p>
      <%= nt("currently_showing", group: group.name) %>
      <%= link_to nt("the_other_group", group: other_groups.first.name), headings_path(other_groups.first) %>
    </p>
  <% else %>
    <p><%= nt("currently_showing", group: group.name) %></p>
    <ul class="dropdown menu" data-dropdown-menu data-disable-hover="true" data-click-open="true">
      <li class="has-submenu">
        <button type="button"><%= nt("different_group") %></button>
        <ul class="menu" data-submenu>
          <% other_groups.each do |other_group| %>
            <li><%= link_to other_group.name, headings_path(other_group) %></li>
          <% end %>
        </ul>
      </li>
    </ul>
  <% end %>
</div>
