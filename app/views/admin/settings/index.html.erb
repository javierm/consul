<h1><%= t("admin.settings.index.title") %></h1>
<div class="tabs-content" data-tabs-content="settings-tabs">
  <%= render "filter_subnav" %>

  <div class="tabs-panel is-active" id="tab-configuration">
    <%= render Admin::Settings::ConfigurationSettingsTabComponent.new(@configuration_settings) %>
  </div>

  <div class="tabs-panel" id="tab-participation-processes">
    <%= render Admin::Settings::ParticipationProcessesTabComponent.new(@participation_processes_settings) %>
  </div>

  <div class="tabs-panel" id="tab-feature-flags">
    <%= render Admin::Settings::FeaturesTabComponent.new(@feature_settings) %>
  </div>

  <div class="tabs-panel" id="tab-map-configuration">
    <%= render Admin::Settings::MapConfigurationTabComponent.new(@map_configuration_settings) %>
  </div>

  <div class="tabs-panel" id="tab-images-and-documents">
    <%= render Admin::Settings::ImagesAndDocumentsTabComponent.new(@uploads_settings) %>
  </div>

  <div class="tabs-panel" id="tab-proposals">
    <%= render Admin::Settings::ProposalsDashboardComponent.new(@proposals_settings) %>
  </div>

  <div class="tabs-panel" id="tab-remote-census-configuration">
    <%= render Admin::Settings::RemoteCensusConfigurationTabComponent.new(
      general_settings: @remote_census_general_settings,
      request_settings: @remote_census_request_settings,
      response_settings: @remote_census_response_settings
    ) %>
  </div>

  <div class="tabs-panel" id="tab-sdg-configuration">
    <%= render Admin::Settings::SDGConfigurationTabComponent.new(@sdg_settings) %>
  </div>
</div>
