<header>
  <%= render "shared/google_analytics" %>
  <%# <%= render "shared/top_links" %>

  <div class="row">
    <div class="top-bar">

      <%= link_to root_path, class: "logo show-for-small-only"  do %>
        <%= image_tag('logo_participaGC.png', class: 'show-for-small-only float-left logo', alt: t("layouts.header.logo"), title: t("layouts.header.logo")) %>
      <% end %>
      <span data-responsive-toggle="responsive-menu" data-hide-for="medium" class="float-right">
        <span class="menu-icon dark" data-toggle="responsive-menu"></span>
      </span>

      <div id="responsive-menu">
        <div class="top-bar-title large-3 medium-2 hide-for-small-only column">
          <%= link_to root_path, class: "hide-for-small-only", accesskey: "/" do %>
            <%= image_tag('logo_participaGC.png', class: 'hide-for-small-only float-left logo', alt: t("layouts.header.logo"), title: t("layouts.header.logo")) %>
            <% if opendata_page? %>
              <%= t("layouts.header.open_gov", open: "#{t('layouts.header.open')}") %> <span>|</span>
              <span class="logo-site"><%= t("layouts.header.open_data") %></span>
            <% end %>
          <% end %>
        </div>


        <div class="top-bar-right small-12 medium-7 column">
          <ul class="menu">
            <%= render "layouts/notification_item" %>
            <%= render "devise/menu/login_items" %>
          </ul>

          <div class="show-for-small-only">
            <div class="subnavigation">
              <%= render "shared/subnavigation" %>
              <!-- <div class="small&#45;12 medium&#45;3 column"> -->
              <!--   <%= yield :header_addon %> -->
              <!-- </div> -->
            </div>
          </div>
        </div>

        <div class="top-bar-right  medium-2 hide-for-small-only column">
          <%= link_to t("layouts.header.external_link_institution_url"), onclick: "ga('send', 'event','Enlaces','Click','enlace_cabildo', 1);" do %>
            <%= image_tag(("CabildoGranCanaria.jpg"), class: 'logo', alt: t('layouts.header.external_link_institution'), title: t('layouts.header.external_link_institution')) %>
          <% end %>
        </div>

      </div>
    </div>
  </div>

  <div class="subnavigation expanded">
    <div class="row">
      <div class="hide-for-small-only">
        <%= render "shared/subnavigation" %>
      </div>
    </div>
  </div>
  <div class="subnavigation expanded">
    <div class="row">
      <ul class="menu">
        <%= render "shared/admin_login_items" %>
      </ul>
    </div>
  </div>


</header>
